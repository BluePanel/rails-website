<div class="page-header">
  <h1><%=t '.title', :default => 'About' %></h1>
</div>

<div class="adminList">
  <h2><%=t '.admins', :default => 'Administrators' %></h2>
  <% @admins.each do |admin| %>
      <div class="admin">
        <%= admin.name %>, Contact: <%= admin.email %>
      </div>
  <% end %>
</div>

<div class="modList">
  <h2><%=t '.global_mods', :default => 'Global Moderators' %></h2>
  <% @mods.each do |mod| %>
      <div class="mod">
        <%= mod.name %>, Contact: <%= mod.email %>
      </div>
  <% end %>
</div>

<div class="developerList">
  <h2><%=t '.developers', :default => 'Developers' %></h2>
  <% @team.each do |member| %>
    <div class="developer">
      <%= member.name %>, Contact: <%= member.email %>
    </div>
  <% end %>
</div>

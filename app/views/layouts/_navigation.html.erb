<%= nav_bar :responsive => true, :brand => "BluePanel" do %>
  <%= menu_group do %>
    <%= menu_item "Home", root_path %>
    <%= menu_item "Articles", articles_path %>
    <%= menu_item "About", about_path %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <% if user_signed_in? %>
      <%= menu_item "Edit Profile", edit_user_registration_path %>
      <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= menu_item "Sign Up", new_user_registration_path %>
      <%= menu_item "Sign In", new_user_session_path %>
    <% end %>
  <% end %>
<% end %>

<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<section>

  <% @articles.each do |article| %>
    <% if(@articles.first == article) %>
      <div class="articleBody">
        <h1><%= link_to article.title, article_path(article) %></h1>
        <div class="articleInfo" > <span class="articleAuthor" ><%= article.author.name %></span> <span class="articleDate" ><%= article.created_at.strftime("%d, %b %Y - %H:%M") %></span> </div>
        <p><%= article.content %></p>
      </div>
      <div class="articleButtons">
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_article_path(article), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    article_path(article),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </div>
    <% else %>
      <div class="articleBody">
        <h1><%= link_to article.title, article_path(article) %></h1>
        <div class="articleInfo" > <span class="articleAuthor" ><%= article.author.name %></span> <span class="articleDate"><%= article.created_at.strftime("%d, %b %Y - %H:%M") %></span> </div>
        <p><%= article.content %></p>
      </div>
      <div class="articleButtons">
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_article_path(article), :class => 'btn btn-default btn-xs' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    article_path(article),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-xs btn-danger' %>
      </div>
    <% end %>
  <% end %>
</section>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_article_path,
            :class => 'btn btn-primary' %>
<div id="bodyEnd"></div>
